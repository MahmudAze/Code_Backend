@model IEnumerable<Product>

@foreach (var item in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3 product">
        <div class="product-item text-center" data-id="@item.CategoryId">
            <div class="img">
                <a href="">
                    <img src="img/@item.ProductImages.FirstOrDefault(m => !m.IsDeleted && m.IsMain)?.Image" class="img-fluid" alt="">
                </a>
            </div>
            <div class="title mt-3">
                <h6>@item.Name</h6>
                <h6>@item.Category.Name</h6>
            </div>
            <div class="price">
                <span class="text-black-50">
                    <form asp-controller="Basket" asp-action="Add" asp-route-id="@item.Id">
                        <button class="btn btn-primary">Add to cart</button>
                    </form>
                </span>
                
                <span class="text-black-50">@item.Price azn</span>
            </div>
        </div>
    </div>
}